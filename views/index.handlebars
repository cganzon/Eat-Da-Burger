<h1>Eat Da Burger!</h1>

<h2>Burgers that you haven't eaten</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}
        <button class="devour" data-id="{{id}}">DEVOUR</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>

<ul>

    <li>
        {{#each burgers}}
            {{#if devoured}}
                {{burger_name}}
            {{/if}}
        {{/each}}
    </li>

</ul>