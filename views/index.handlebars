<div class="jumbotron mt-5">
  <h1 class="text-center mt-3 mb-5"><i class="fas fa-hamburger"></i> Eat Da Burger!</h1>

  <div class="row">
    <div class="col-lg-6">
      <h2>Burgers that have not been eaten</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <button type="button" class="btn btn-danger eat" data-id="{{id}}" data-devoured="{{devoured}}">
            {{burger_name}}
            <i class="fas fa-utensils"></i>
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-lg-6">
      <h2>Burgers that are no more</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li class="eaten">
          <button type="button" class="btn btn-danger" disabled>
            {{burger_name}}
          </button>
          {{!-- {{burger_name}} --}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <h2>Add a Burger!</h2>
      <form class="create-form form-inline">
        <div class="form-group mr-2">
          <input type="text" class="form-control" id="burger">
        </div>

        <button type="submit" class="btn btn-danger"><i class="fas fa-plus"></i></button>
      </form>
    </div>
  </div>
</div>


