<h1>Eat Da Burger!</h1>

<h2>Burgers that have not been eaten</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    <button class="eat" data-id="{{id}}" data-devoured="{{devoured}}">
      {{burger_name}}
    </button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are no more</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{burger_name}}
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger type:</label>
    <input type="text" id="burger">
  </div>

  <button type="submit">Add Burger</button>
</form>